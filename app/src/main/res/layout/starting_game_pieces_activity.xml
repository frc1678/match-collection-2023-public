<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/compose_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <Button
            android:id="@+id/btn_switch_orientation_game_pieces"
            style="@style/btn_switch_orientation"
            android:layout_weight="1"
            android:text="@string/btn_switch_orientation" />

        <Button
            android:id="@+id/btn_proceed_game_piece"
            style="@style/btn_starting_position_proceed"
            android:layout_weight="1"
            android:text="@string/btn_proceed" />

    </LinearLayout>

</LinearLayout>
