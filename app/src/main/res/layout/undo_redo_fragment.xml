<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_undo"
            style="@style/btn_action_hor"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/small_text"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_undo_selector"
            android:padding="@dimen/very_very_small"
            android:text="@string/btn_undo" />

        <Button
            android:id="@+id/btn_redo"
            style="@style/btn_action_hor"
            android:layout_weight="1"
            android:autoSizeMaxTextSize="@dimen/small_text"
            android:autoSizeTextType="uniform"
            android:background="@drawable/btn_redo_selector"
            android:padding="@dimen/very_very_small"
            android:text="@string/btn_redo" />

    </LinearLayout>

</LinearLayout>